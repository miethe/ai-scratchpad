{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://knit-wit.app/schemas/pattern-dsl-v0.1.json",
  "title": "Knit-Wit Pattern DSL",
  "description": "JSON Schema for Knit-Wit crochet pattern Domain-Specific Language (DSL) v0.1",
  "type": "object",
  "required": ["shape", "gauge", "rounds", "metadata"],
  "properties": {
    "shape": {
      "$ref": "#/definitions/ShapeParameters"
    },
    "gauge": {
      "$ref": "#/definitions/GaugeInfo"
    },
    "rounds": {
      "type": "array",
      "description": "Round-by-round instructions for the pattern",
      "items": {
        "$ref": "#/definitions/RoundInstruction"
      },
      "minItems": 1
    },
    "metadata": {
      "$ref": "#/definitions/PatternMetadata"
    },
    "notes": {
      "type": ["string", "null"],
      "description": "General notes and instructions for the entire pattern"
    }
  },
  "definitions": {
    "ShapeParameters": {
      "type": "object",
      "description": "Parameters defining the 3D shape dimensions",
      "required": ["shape_type"],
      "properties": {
        "shape_type": {
          "type": "string",
          "enum": ["sphere", "cylinder", "cone"],
          "description": "Type of 3D shape to generate"
        },
        "diameter_cm": {
          "type": ["number", "null"],
          "exclusiveMinimum": 0,
          "description": "Diameter in centimeters (used for sphere and cylinder)"
        },
        "height_cm": {
          "type": ["number", "null"],
          "exclusiveMinimum": 0,
          "description": "Height in centimeters (used for cylinder and cone)"
        },
        "base_diameter_cm": {
          "type": ["number", "null"],
          "exclusiveMinimum": 0,
          "description": "Base diameter in centimeters (used for cone)"
        },
        "top_diameter_cm": {
          "type": ["number", "null"],
          "exclusiveMinimum": 0,
          "description": "Top diameter in centimeters (used for cone)"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "shape_type": { "const": "sphere" }
            }
          },
          "then": {
            "required": ["diameter_cm"]
          }
        },
        {
          "if": {
            "properties": {
              "shape_type": { "const": "cylinder" }
            }
          },
          "then": {
            "required": ["diameter_cm", "height_cm"]
          }
        },
        {
          "if": {
            "properties": {
              "shape_type": { "const": "cone" }
            }
          },
          "then": {
            "required": ["base_diameter_cm", "top_diameter_cm", "height_cm"]
          }
        }
      ]
    },
    "GaugeInfo": {
      "type": "object",
      "description": "Gauge information determining the relationship between physical dimensions and stitch counts",
      "required": ["stitches_per_cm", "rows_per_cm"],
      "properties": {
        "stitches_per_cm": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Number of stitches per centimeter"
        },
        "rows_per_cm": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Number of rows per centimeter"
        },
        "hook_size_mm": {
          "type": ["number", "null"],
          "exclusiveMinimum": 0,
          "description": "Recommended crochet hook size in millimeters"
        },
        "yarn_weight": {
          "type": ["string", "null"],
          "enum": ["lace", "fingering", "sport", "DK", "worsted", "bulky", "super_bulky", null],
          "description": "Recommended yarn weight category"
        },
        "swatch_notes": {
          "type": ["string", "null"],
          "description": "Additional notes about gauge swatch or adjustments"
        }
      }
    },
    "RoundInstruction": {
      "type": "object",
      "description": "Complete instruction for a single round (row) in the pattern",
      "required": ["round_number", "stitches", "total_stitches"],
      "properties": {
        "round_number": {
          "type": "integer",
          "minimum": 0,
          "description": "Round number (0-indexed)"
        },
        "stitches": {
          "type": "array",
          "description": "List of stitch instructions for this round",
          "items": {
            "$ref": "#/definitions/StitchInstruction"
          },
          "minItems": 1
        },
        "total_stitches": {
          "type": "integer",
          "minimum": 1,
          "description": "Total stitch count after completing this round"
        },
        "description": {
          "type": ["string", "null"],
          "description": "Human-readable description of the round"
        }
      }
    },
    "StitchInstruction": {
      "type": "object",
      "description": "A single stitch operation within a round",
      "required": ["stitch_type"],
      "properties": {
        "stitch_type": {
          "type": "string",
          "description": "Type of stitch (sc, hdc, dc, inc, dec, etc.)",
          "examples": ["sc", "inc", "dec", "hdc", "dc", "slst", "ch"]
        },
        "count": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Number of times to repeat this stitch"
        },
        "target": {
          "type": ["string", "null"],
          "description": "Where to place the stitch (next st, same st, etc.)",
          "examples": ["next st", "same st", "next 2 sts"]
        },
        "note": {
          "type": ["string", "null"],
          "description": "Additional instruction or clarification for this stitch"
        }
      }
    },
    "PatternMetadata": {
      "type": "object",
      "description": "Metadata about pattern generation and characteristics",
      "required": ["generated_at", "engine_version", "total_rounds"],
      "properties": {
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of pattern generation"
        },
        "engine_version": {
          "type": "string",
          "description": "Version of the pattern engine used to generate this pattern",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "examples": ["0.1.0", "1.0.0"]
        },
        "total_rounds": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of rounds in the pattern"
        },
        "estimated_time_minutes": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Estimated completion time in minutes"
        },
        "difficulty": {
          "type": ["string", "null"],
          "enum": ["beginner", "intermediate", "advanced", null],
          "description": "Pattern difficulty level"
        },
        "tags": {
          "type": "array",
          "description": "Searchable tags for the pattern",
          "items": {
            "type": "string"
          },
          "default": []
        }
      }
    }
  }
}
