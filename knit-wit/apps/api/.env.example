# Knit-Wit API Environment Configuration
# Copy this file to .env and update values as needed

# Application Settings
APP_NAME=Knit-Wit API
APP_VERSION=0.1.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# API Configuration
API_V1_PREFIX=/api/v1

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs/telemetry
LOG_RETENTION_DAYS=90
LOG_ENABLE_CONSOLE=true

# Error Tracking (Sentry)
# Get your DSN from https://sentry.io/settings/projects/
SENTRY_DSN=
# Environment: development, staging, production
SENTRY_ENVIRONMENT=development
# Sample rate: 0.0 to 1.0 (1.0 = 100% of errors captured)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Enable/disable Sentry (set to false in tests)
SENTRY_ENABLED=true
