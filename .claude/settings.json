{
  "permissions": {
    "deny": [
      "Read(./secrets/**)",
      "Bash(rm -rf:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(docker:*::*)",
      "Bash(npm install:*)",
      "Bash(pnpm add:*)"
    ],
    "allow": [
      "Bash(pnpm:*)",
      "Bash(uv:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Read(./**)",
      "Write(./**)",
      "Edit",
      "MultiEdit",
      "Grep",
      "Glob",
      "LS"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Checking file changes...'"
          }
        ]
      }
    ]
  }
}
